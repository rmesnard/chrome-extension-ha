{
  "manifest_version": 2,

  "name": "Modify CSS and HTML",
  "version": "1.0.0",
  "description": "HA KODI Integration into Netflix",

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	
  "permissions": [ "storage" ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
    
  },
  
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["https://www.netflix.com/*"]
  }],
  
  "web_accessible_resources": [
    "kodi.html",
	"netflix.js",
    "img/tv-256.png",
    "img/windows8-256.png",
	"img/comments-48.png",
	"img/appointment_reminders-48.png",
	"img/error-48.png"
	]
}
